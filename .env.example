# Library Configuration
# Comma-separated list of library paths inside the container
LIBRARY_PATHS=/library
# Host path that is bind-mounted to the container's library path
LIBRARY_HOST_PATH=/volume1/Heritage/Photos
# Container mount point for the library (defaults to /library)
LIBRARY_CONTAINER_PATH=/library

# Database Configuration
DB_URL=postgresql://postgres:password@db:5432/photo_library
# Alternative SQLite: sqlite:////cache/app.db

# PostgreSQL Configuration (if using postgres)
POSTGRES_DB=photo_library
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Import Watcher Configuration
IMPORT_WATCH_ENABLED=true
IMPORT_WATCH_INTERVAL_SECONDS=60

# Directory Configuration
THUMBNAILS_DIR=/data/thumbnails
DOWNLOADS_DIR=/data/downloads
MEDIA_DIR=/data/media
# Host directory mapped to /data inside the container (used by docker-compose)
APP_DATA_PATH=./data
# Host ffmpeg binary to bind-mount when using docker-compose (optional)
HOST_FFMPEG_PATH=/usr/bin/ffmpeg

# ML Model Configuration (disabled for Photo Library)
ENABLE_RAM=false
ENABLE_BLIP=false
ENABLE_YOLO=false
ENABLE_CLIP=false

# Performance Settings
THUMBNAIL_SIZE=256
MAX_WORKERS=4
THUMBNAIL_BATCH_SIZE=10

# Security (optional)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
