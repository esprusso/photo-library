# Library Configuration
LIBRARY_PATHS=/Volumes/Heritage/Photos

# Database Configuration
DB_URL=postgresql://postgres:password@db:5432/photo_library
# Alternative SQLite: sqlite:////cache/app.db

# PostgreSQL Configuration (if using postgres)
POSTGRES_DB=photo_library
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# ML Model Configuration (disabled for Photo Library)
ENABLE_RAM=false
ENABLE_BLIP=false
ENABLE_YOLO=false
ENABLE_CLIP=false

# Performance Settings
THUMBNAIL_SIZE=256
MAX_WORKERS=4

# Security (optional)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1